---
import Layout from "./Layout.astro";
import HeaderConvergent from "../components/header-convergent.astro";
const { title } = Astro.props;
import { Content as Footer } from "../pages/contact.md";
---

<Layout title={title}>
  <HeaderConvergent />
  <main>
    <slot />
  </main>
   <Footer />
</Layout>

<style>
  main {
    width: calc(100% - 40px);
    max-width: 1200px;
    flex-grow: 1;
    margin: 0 auto;

    h1 {
      font-size: 2.5rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    img {
      max-width: 777px;
    }
  }
</style>
